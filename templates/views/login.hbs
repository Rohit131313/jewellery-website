    <style>
        .main {
            background: rgb(255,172,172);
background: linear-gradient(90deg, rgba(255,172,172,0.7596288515406162) 20%, rgba(167,247,247,0.9052871148459384) 99%);
            height: 120px;
            width: cover;
            padding-top: 1vw;

        }

        .topnav {
            overflow: hidden;
            background-color: #f2efef;

            margin-right: 12vw;
            margin-left: 12vw;
            border-radius: 2vw;
        }

        .logo {
            float: left;
            padding: 14px 16px;
            border-radius: 50%;
            height: 5vw;
            width: 5vw;
            margin-left: 1vw;
            margin-right: 1vw;
            margin-top: 0.5vw;
        }

        .topnav .abc {
            float: left;
            display: block;
            color: #121111;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 25px;
            margin-top: 0.5vw;
        }

        .active1 {
            background-color: rgb(228, 26, 164);
            color: white;
            width: fit-content;
            height: fit-content;
            border-radius: 1vw;
        }

        .active {
            background-color: #06a691;
            color: white;
        }

        .topnav .icon {
            display: none;
        }

        .dropdown {
            float: left;
            overflow: hidden;
        }

        .dropdown .dropbtn {
            font-size: 17px;
            border: none;
            outline: none;
            color: white;
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .dropdown-content a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .topnav a:hover,
        .dropdown:hover .dropbtn {
            background-color: #555;
            color: white;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
            color: black;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        @media screen and (max-width: 1081px) {

            .topnav a:not(:first-child),
            .dropdown .dropbtn {
                display: none;
            }

            .topnav a.icon {
                float: right;
                display: block;
            }
        }

        @media screen and (max-width: 1081px) {
            .topnav.responsive {
                position: relative;
            }

            .topnav.responsive .icon {
                position: absolute;
                right: 0;
                top: 0;
            }

            .topnav.responsive a {
                float: none;
                display: block;
                text-align: left;
            }

            .topnav.responsive .dropdown {
                float: none;
            }

            .topnav.responsive .dropdown-content {
                position: relative;
            }

            .topnav.responsive .dropdown .dropbtn {
                display: block;
                width: 100%;
                text-align: left;
            }


        }

        .grid {
            display: grid;
            grid-template-rows: 1fr 1fr 1fr 1fr 1fr;
            border: 1px solid black;
            float: left;
            height: fit-content;
            padding: 2vw;
            width: fit-content;
            background-color: #06a691;
            margin-top: 7vw;
            margin-left: 2vw;
            position: fixed;
            border-radius: 2vw;
        }

        .grid-items {

            color: black;
            font-size: 2vw;
            font-weight: bold;
        }

        .photo-grid {
            display: grid;
            grid-template-columns: repeat(2, 25vw);
            grid-template-rows: repeat(4, 25vw);
            gap: 1vw;
            margin-left: 40%;
            margin-top: 10%;
        }

        .photo-grid img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 2vw;
            border: 1px solid black;
        }

        .heading {
            color: black;
            background-color: rgb(9, 227, 198);
            margin-left: 41%;
            margin-top: 5%;
            margin-right: 25%;
            padding-left: 3%;
            border-radius: 1vw;
            font-size: 4vw;
        }

        .last {
            height: 25vw;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            background: rgb(255,172,172);
background: linear-gradient(90deg, rgba(255,172,172,0.7596288515406162) 20%, rgba(167,247,247,0.9052871148459384) 99%);
        }

        .logo1 {
